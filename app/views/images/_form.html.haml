= form_for @image, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :uri, :class => 'control-label'
    .controls
      = f.text_area :uri, :class => 'text_area', rows: 5
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_area', rows: 5
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    %button.btn{type: 'button', 'data-dismiss' => 'modal'}
      = t '.cancel', :default => t("helpers.links.cancel")
